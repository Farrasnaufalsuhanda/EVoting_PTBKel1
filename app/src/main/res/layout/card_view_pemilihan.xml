<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_kandidat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:contentPadding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:layout_editor_absoluteX="-17dp"
            tools:layout_editor_absoluteY="5dp">

            <TextView
                android:id="@+id/textnamaperiode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="39dp"
                android:layout_marginEnd="39dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="55px"
                android:textStyle="bold"
                tools:text="text" />

            <TextView
                android:id="@+id/texttahunperiode"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textnamaperiode"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="115dp"
                android:layout_marginLeft="-223dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="119dp"
                android:layout_toRightOf="@id/textnamaperiode"
                android:text="tahun"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="45px" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>